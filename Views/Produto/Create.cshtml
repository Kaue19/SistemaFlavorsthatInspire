@model SistemaFlavorsThatInspire.Models.Produto

@{
    ViewData["Title"] = "Create";
}

<h1>Criar Novo</h1>

<h4>Produto</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ProdutoNome" class="control-label"></label>
                <input asp-for="ProdutoNome" class="form-control" />
                <span asp-validation-for="ProdutoNome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProdutoDescricao" class="control-label"></label>
                <input asp-for="ProdutoDescricao" class="form-control" />
                <span asp-validation-for="ProdutoDescricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProdutoFoto" class="control-label"></label>
                <input asp-for="ProdutoFoto" class="form-control" />
                <span asp-validation-for="ProdutoFoto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProdutoPreco" class="control-label"></label>
                <input asp-for="ProdutoPreco" class="form-control" type="number" />
                <span asp-validation-for="ProdutoPreco" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Categoria" class="control-label"></label>
                <select asp-for="CategoriaId" class ="form-control" asp-items="ViewBag.CategoriaId"></select>
            </div>
            <div class="form-group">
                <label asp-for="ProdutoDesconto" class="control-label"></label>
                <input asp-for="ProdutoDesconto" class="form-control" type="number" />
                <span asp-validation-for="ProdutoDesconto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-primary">Voltar para à lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
